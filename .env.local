# ========================================
# CV-Enhancer Local Development Configuration
# ========================================

# ----------------
# Mode Configuration
# ----------------
MODE=local

# ----------------
# LLM Configuration
# ----------------
# Option 1: Ollama (Free, Local) - Default
LLM_PROVIDER=ollama
LLM_MODEL=llama3:8b
LLM_API_KEY=
LLM_API_BASE=http://localhost:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Option 2: OpenAI (Uncomment and add your API key)
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4
# LLM_API_KEY=sk-your-openai-api-key-here
# LLM_TEMPERATURE=0.7
# LLM_MAX_TOKENS=2048

# Option 3: Anthropic Claude (Uncomment and add your API key)
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-5-sonnet-20241022
# LLM_API_KEY=sk-ant-your-anthropic-api-key-here
# LLM_TEMPERATURE=0.7
# LLM_MAX_TOKENS=2048

# Option 4: Google Gemini (Uncomment and add your API key/credentials)
# LLM_PROVIDER=gemini
# LLM_MODEL=gemini-1.5-flash
# LLM_TEMPERATURE=0.7
# LLM_MAX_TOKENS=2048

# ----------------
# Storage Configuration
# ----------------
STORAGE_TYPE=local
DATA_DIR=./data

# ----------------
# Vector Database Configuration
# ----------------
VECTOR_DB_TYPE=faiss
VECTOR_DB_PATH=./data/embeddings

# ----------------
# ADK Configuration
# ----------------
ADK_MODE=local
ADK_HOST=localhost
ADK_PORT=8000

# ----------------
# User Interaction
# ----------------
USER_INTERACTION_MODE=interactive

# ----------------
# Logging
# ----------------
LOG_LEVEL=INFO
